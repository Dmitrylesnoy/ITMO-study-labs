<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="lab8.client.controllers.LoginController"
    stylesheets="@../css/style.css" >

    <children>
        <VBox alignment="CENTER" spacing="15"
            maxWidth="300" maxHeight="220" styleClass="login-box">
            <Label text="Space Marine Collection" styleClass="title-label" />
            <TextField fx:id="loginField" promptText="Login" maxWidth="250" onAction="#loginClick" />
            <PasswordField fx:id="passwordField" promptText="Password" maxWidth="250"
                onAction="#loginClick" />
            <Button fx:id="loginBtn" text="Login" onAction="#loginClick" maxWidth="250"/>
            <Label fx:id="statusLabel" styleClass="status-label" maxWidth="250" wrapText="true" text=""/>
            <ComboBox fx:id="languageSelector" promptText="Select lang" />
        </VBox>
    </children>
</StackPane>